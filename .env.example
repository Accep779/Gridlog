# Django Configuration
# Copy this file to .env and fill in the values

# REQUIRED: Generate with: python -c "import secrets; print(secrets.token_urlsafe(50))"
DJANGO_SECRET_KEY=

# Set to 'True' for development, 'False' for production
DEBUG=False

# Comma-separated list of allowed hosts (e.g., localhost,127.0.0.1,yourdomain.com)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DB_NAME=gridlogdb
DB_USER=root
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=3306

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email@gmail.com
EMAIL_HOST_PASSWORD=your_app_password
DEFAULT_FROM_EMAIL=Gridlog <noreply@yourdomain.com>

# Frontend API URL (for CORS/axios)
VITE_API_URL=http://localhost:3000
